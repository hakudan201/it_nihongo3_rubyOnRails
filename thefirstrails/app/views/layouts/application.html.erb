<!DOCTYPE html>
<html>
  <head>
    <title>Thefirstrails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <p>こんにちは, <%= current_user.email %></p>
      <%= link_to "ホムページ", "/static_pages/home" %>
      <p></p>
      <%= link_to "本ページ", "/books" %>
      <p></p>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "サインイン", new_user_session_path %>
      <p></p>
      <%= link_to "ユーザ登録", new_user_registration_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
